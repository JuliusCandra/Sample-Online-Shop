<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_background"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="3dp">

    <ImageView
        android:src="@drawable/ic_facebook"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/gambar_produk1"
        android:layout_width="100dp"
        android:layout_height="120dp"
         />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:id="@+id/judul_produk1"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="judul produk"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/gambar_produk1"
        android:layout_marginTop="20dp" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="harga barang"
        android:layout_below="@id/judul_produk1"
        android:layout_toEndOf="@id/gambar_produk1"
        android:layout_marginStart="10dp"
        android:id="@+id/harga_barang"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
         />

        <LinearLayout
            android:id="@+id/linear12"
            android:backgroundTint="@color/colorTeksReset"
            android:background="@drawable/slider_banner"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/gambar_produk1"
            android:layout_below="@id/harga_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:id="@+id/ratng_history"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="4" />


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_star_black_24dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah rating"
        android:textSize="10sp"
        android:id="@+id/jumlah_rating_anda"
        android:layout_below="@id/harga_barang"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/linear12"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:id="@+id/tanggal_pembelian_anda"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="tanggal pembelian"
        android:layout_toEndOf="@id/gambar_produk1"
        android:layout_below="@id/jumlah_rating_anda" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:layout_alignParentEnd="true"
        android:id="@+id/status_pemebelian"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorTeksReset"
        />


</RelativeLayout>