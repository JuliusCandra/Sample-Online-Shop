<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_okay_verification"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:elevation="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/senyum"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:background="@drawable/background_succesfull"
                android:elevation="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_sentiment_satisfied_black_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/gambar_back" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/teksSenyum"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorTeksReset"
                android:text="Verifikasi email telah dikirim,chek email kamu sekarang"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tombol_oke_verifaksi_email"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Okay"
                    android:background="@drawable/button_reset_with_email"
                    tools:ignore="ButtonStyle" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>