<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_error_signal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:elevation="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginEnd="10dp"
                android:id="@+id/close"
                android:layout_gravity="end"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_marginTop="15dp"
                android:contentDescription="close" />


            <ImageView
                android:id="@+id/no_signal"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:background="@drawable/background_succesfull"
                android:elevation="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_signal_cellular_off_black_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/gambar_back" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/teksErrorSignal"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="Waduh, Terjadi kesalahan pada jarigan anda \n Silahkan anda periksa jaringan anda"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tombol_error_signal"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coba lagi"
                    android:background="@drawable/button_reset_with_email"
                    tools:ignore="ButtonStyle" />



            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>